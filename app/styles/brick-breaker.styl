//
// Variables
//---------------------------------------------------------
stageWidth         = 602px
stageHeight        = 680px
brickBorderWidth   = 4px
brickMargin        = 0px
brickHeight        = 15px
brickWidth         = 44px
ballSize           = 16px
paddleWidth        = 100px
scoreHeight        = 30px
scoreWidth         = 400px
teal               = #1abc9c
green              = #2ecc71
blue               = #3498db
amethyst           = #9b59b6
yellow             = #f1c40f
orange             = #e74c3c
grey               = #95a5a6
steel              = #34495e
midnight           = #2c3e50
white              = #ecf0f1
pumpkin            = #d35400



//
// Mixins
//---------------------------------------------------------
brick-color(color)
  background color
  border-bottom brickBorderWidth solid darken(color, 10%)

font-defaults()
  font-family 'helvetica'
  color white
  font-size 23px
  font-weight lighter


//
// Positions and styles
//---------------------------------------------------------
html, body
  width 100%
  height 100%
  background steel
  overflow hidden

#stage
  width stageWidth
  height stageHeight
  background midnight
  position absolute
  top 50%
  left 50%
  margin-top -(stageHeight/2)
  margin-left -(stageWidth/2)

#score
  width scoreWidth
  height scoreHeight
  position absolute
  bottom 10px
  left 20px
  font-defaults()

  &:before
    content "Score "
    color lighten(midnight, 10%)
    font-size 16px
    position absolute
    top -25px

#ball
  width ballSize
  height ballSize
  background white
  border-radius 50%

#paddle
  width paddleWidth
  height 16px
  background pumpkin
  border-radius 20px

#ball, #paddle, .brick
  position absolute

#bricks
  width stageWidth
  height 300px
  position relative
  margin 3px 0 0 3px

.brick
  width brickWidth
  height brickHeight
  margin brickMargin
  transition all 0.173s

.brick-type-1
  brick-color(teal)

.brick-type-2
  brick-color(green)

.brick-type-3
  brick-color(blue)

.brick-type-4
  brick-color(amethyst)

.brick-type-5
  brick-color(yellow)

.brick-type-6
  brick-color(orange)

.brick-type-7
  brick-color(grey)

.brick-type-8
  brick-color(white)

.explode
  width brickWidth / 4
  height brickHeight / 4
  margin-left brickWidth / 2
  margin-top brickHeight / 2
  pointer-events none
  opacity 0

.explosion
  width 100px
  height 100px
  position absolute
  z-index 9999
  pointer-events none

  .bits
    width 13px
    height 13px
    position absolute
    left 50%
    top 50%
    margin -6px 0 0 -6px

.hline
  width 100%
  height 1px

.vline
  width 1px
  height 100%

.vline, .hline
  background red
  position absolute
